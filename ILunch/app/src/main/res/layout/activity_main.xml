<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/btn1"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:text="Especial"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtmen" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginBottom="99dp"
        android:text="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <TextView
        android:id="@+id/txtmen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="37dp"
        android:text="Mi Menú del Dia :)"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btnNuevoPlato" />

    <TextView
        android:id="@+id/txtfkbvjdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:layout_marginTop="56dp"
        android:text="¿Hay Plato Nuevo?"
        app:layout_constraintBottom_toTopOf="@+id/btnNuevoPlato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNuevoPlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="89dp"
        android:layout_marginStart="14dp"
        android:text="Agregar"

        app:layout_constraintBottom_toTopOf="@+id/txtmen"
        app:layout_constraintStart_toStartOf="@+id/txtfkbvjdf"
        app:layout_constraintTop_toBottomOf="@+id/txtfkbvjdf" />
</android.support.constraint.ConstraintLayout>